<% content_for :title, "Station Manager" %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Phone</th>
      <th># Visits</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% collection.each do |row| %>
      <tr>
        <td><%= row.name %></td>
        <td><%= row.address %></td>
        <td><%= row.city %></td>
        <td><%= row.state %></td>
        <td><%= row.zip %></td>
        <td><%= row.phone %></td>
        <td><%= row.visits %></td>
        <td>
          <div class="btn-toolbar pull-right">
            <%= link_to "Show", row, class: "btn btn-xs btn-info" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Add New Station", new_station_path, class: "btn btn-lg btn-success" %>
