<p>Please enter your new password now. You will be logged out and can log back in with your new password.</p>
<% if password_reset_form.errors.present? %>
  <h2>Form is invalid</h2>
  <ul>
    <% password_reset_form.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with :model => password_reset_form, :scope => :password_reset, :url => password_reset_path, :method => :post do |form| %>
  <div class="form-group">
    <%= form.label :new_password, class: "control-label" %>
    <%= form.password_field :new_password, class: "form-control input-lg" %>
  </div>
  <div class="form-group">
    <%= form.label :new_password_confirmation, class: "control-label" %>
    <%= form.password_field :new_password_confirmation, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= form.submit "Reset password", class: "btn btn-lg btn-success" %>
  </div>
<% end %>
